# -----------------------------
# Server Config
# -----------------------------
PORT=3001
NODE_ENV=development

# -----------------------------
# Database Config
# -----------------------------
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=appuser
DB_PASSWORD=appPassword
DB_DATABASE=appdb

# -----------------------------
# JWT Config
# -----------------------------
SECRET_JWT=your_jwt_secret_here
JWT_REFRESH_TOKEN_SECRET=your_refresh_secret_here
JWT_RESET_PASSWORD=your_reset_secret_here

# Thời gian hết hạn tính bằng giây
# 604800 = 7 ngày, 600 = 10 phút
JWT_REFRESH_TOKEN_EXPIRATION_TIME=604800
JWT_EXPIRATION_TIME_DEFAULT=600

# -----------------------------
# Admin Default Account (tạo tự động khi khởi chạy lần đầu)
# -----------------------------
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecretpassword
ADMIN_NAME=Administrator

# -----------------------------
# Cloudflare R2 (Object Storage)
# -----------------------------
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name
CLOUDFLARE_ACCOUNT_ID=your_account_id
R2_PUBLIC_URL=https://pub-xxxxxx.r2.dev
ENDPOINT=https://<your_account_id>.r2.cloudflarestorage.com

# -----------------------------
# Redis Config
# -----------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------
# Sentry (Error Tracking)
# -----------------------------
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# -----------------------------
# SMTP (Mail)
# -----------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="Your App Name <your@gmail.com>"
